<div class="panel panel-info">
      <div class="panel-heading">Verifique informacion de reserva</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label class="string optional control-label">Fecha Desde</label>
              <input class="string optional form-control" type="text" name="started_at" id="started_at" data-provide='datepicker'>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label class="string optional control-label">Fecha Hasta</label>
              <input class="string optional form-control" type="text" name="ended_at" id="ended_at" data-provide='datepicker'>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group bootstrap-timepicker timepicker">
              <label class="control-label">Hora Desde</label>
              <input class="form-control input-small" type="text" name="started_time" id="started_time">
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group bootstrap-timepicker timepicker">
              <label class="control-label">Hora Hasta</label>
              <input class="form-control input-small" type="text" name="ended_time" id="ended_time">
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label class="control-label">Distrito</label>
              <select class="form-control" type="text" name="district" id="district">
                <option>Molina</option>
                <option>Ate</option>
                <option>Villa María del Triunfo</option>
              </select>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <label class="control-label">Typo de reservación</label>
              <select class="form-control" type="text" name="reservation_type" id="reservation_type">
                <option>Diario</option>
                <option>Semanal</option>
                <option>Mensual</option>
              </select>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
                <div class="checkbox">
                    <label>
                      <input type="checkbox"> Indicar como favorito
                    </label>
                  </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 pull-right">
            <%= link_to "Reservar", reserve_reserve_path, :class=>"btn btn-lg btn-success" %>
          </div>
        </div>
      </div>
    </div>

    <script>
  $(document).ready(function(){
    $('#started_at').datepicker();
    $('#ended_at').datepicker();
    
    $('#started_time').timepicker();
    $('#ended_time').timepicker();
    
    //boton reservar
    $(".group-col .btn-info").on("click", function(){
      $(".group-col").toggle();
      $(".detalle-park").toggle();
    });
    
    
  })
</script>

<%- model_class = Place -%>
<div class="page-header">
  <h1>Mis Parqueos</h1>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= link_to t('.newg', :default => 'Nuevo Parqueo'),
            new_place_path,
            :class => 'btn btn-md btn-success' %>
  </div>
</div><br>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Dirección</th>
          <th>Precio</th>
          <th>Estado</th>
          <th>Decha Desde</th>
          <th>Fecha Hasta</th>
          <th>Hora Desde</th>
          <th>Hora Hasta</th>
          <th>Descripción</th>
          <th>Usuario</th>
          <th>Distrito</th>
          <th>Tipo de Reservación</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @places.each do |place| %>
          <tr>
            <td><%= place.address %></td>
            <td><%= place.price %></td>
            <td><%= place.state %></td>
            <td><%= place.started_at %></td>
            <td><%= place.ended_at %></td>
            <td><%= place.started_time %></td>
            <td><%= place.ended_time %></td>
            <td><%= place.description %></td>
            <td><%= place.user_id %></td>
            <td><%= place.district.name %></td>
            <td><%= place.reservation_type.name %></td>
            <td>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          place_path(place),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
              <!--<a class="btn btn-xs btn-success" href="#">Confirmar</a>-->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
